# Flask Environment
FLASK_ENV=testing

# Database (テスト用はSQLite In-Memory またはtest_db)
DATABASE_URL=sqlite:///:memory:
# または、ローカルファイルにしたい場合
# DATABASE_URL=sqlite:///test_progress.db

# Secret Key（テスト用の簡易キー）
SECRET_KEY=test-secret-key

# Celery（テスト時は無効またはローカルRedis使用）
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# スーパーユーザー（テスト用簡易アカウント）
SUPERUSER=test_admin
SUPERUSER_PASS=test_password

# CORS（テスト時はlocalhostのみ）
CORS_ORIGINS=http://localhost

# API Metadata（Swagger等の動作確認用）
API_TITLE=Task Progress API (Test)
API_VERSION=1.0.0
OPENAPI_VERSION=3.0.3
OPENAPI_URL_PREFIX=/
OPENAPI_JSON_PATH=openapi.json
OPENAPI_SWAGGER_UI_PATH=/swagger-ui
OPENAPI_SWAGGER_UI_URL=http://localhost:5000/swagger-ui
URL_PREFIX=/progress
